{
  "name": "ku-client",
  "version": "1.0.0",
  "description": "KU Client - Korea University Unified Launcher (LMS & Portal)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build:win": "electron-builder --win --x64 --arm64",
    "build:mac": "electron-builder --mac --universal",
    "build:linux": "electron-builder --linux --x64 --arm64",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux"
  },
  "keywords": [],
  "author": "BBIYAKYEE7(김재윤)",
  "license": "MIT",
  "homepage": "https://github.com/BBIYAKYEE7/Korea-University-Launcher",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.koreauniversity.launcher",
    "productName": "KU Client",
    "artifactName": "KU-Client-${os}-universal.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "auto-updater.js",
      "config.js",
      "renderer/**/*",
      "image/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "image/logo.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "icon": "image/logo.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "linux": {
      "icon": "image/logo.png",
      "maintainer": "BBIYAKYEE7(김재윤) <bbiyakyee7@gmail.com>",
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "KU Client",
      "installerLanguages": [
        "ko-KR"
      ],
      "language": "1042"
    }
  }
}
